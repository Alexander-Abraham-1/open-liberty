<server>
    <featureManager>
        <feature>sessionCache-1.0</feature>
    </featureManager>

	<httpSessionCache jCacheManagerRef="CacheManager" writeContents="ALL_SESSION_ATTRIBUTES" />

	<jCachingProvider id="CachingProvider" libraryRef="InfinispanLib" />
	<jCacheManager id="CacheManager" jCachingProviderRef="CachingProvider">
	    <!-- set username and password in users.properties -->
		<properties infinispan.client.hotrod.server_list="${INF_SERVERLIST}" 
		            infinispan.client.hotrod.auth_username="user" 
		            infinispan.client.hotrod.auth_password="pass" 
		            infinispan.client.hotrod.auth_realm="default"
		            infinispan.client.hotrod.sasl_mechanism="PLAIN" />
	</jCacheManager>

</server>