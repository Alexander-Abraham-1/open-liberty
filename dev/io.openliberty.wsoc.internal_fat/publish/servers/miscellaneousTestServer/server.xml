<server>

   <!-- Do not Add CDI features to this test bucket, that will invalidate at least one of the tests -->

    <featureManager>
        <feature>websocket-1.0</feature>
        <feature>localConnector-1.0</feature>
        <feature>ejbLite-3.2</feature>
    </featureManager>
        
    <include location="../fatTestPorts.xml"/>
    
    <logging maxFileSize="50" maxFiles="3" traceFileName="wsocTrace.log" traceSpecification="*=info:com.ibm.ws.webcontainer.*=all:com.ibm.wsspi.webcontainer.*=all:com.ibm.ws.webcontainer31.*=all:ChannelFramework=all:HTTPChannel=all:TCPChannel=all:websockets=all:app.manager*=all:com.ibm.ws.config.*=all:EJBContainer=all"/> 
        
    <javaPermission className="java.lang.RuntimePermission" name="accessDeclaredMembers"/>
    <javaPermission className="java.lang.RuntimePermission" name="modifyThread"/>  
    <javaPermission className="java.lang.RuntimePermission" name="getClassLoader"/> 
    <javaPermission className="java.lang.RuntimePermission" name="setContextClassLoader"/>
    <javaPermission className="java.net.SocketPermission" name="*" actions="resolve,accept,listen"/>
    <javaPermission className="java.util.PropertyPermission" name="*" actions="read"/>
</server>
