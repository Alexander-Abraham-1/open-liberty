-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 11
javac.target: 11

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=11))"

jakarta-activation-version=2.1.0
angus-activation-version=1.0.0

Bundle-SymbolicName: io.openliberty.jakarta.activation.2.1; singleton:=true

Export-Package: \
	jakarta.activation;version="2.1",\
	jakarta.activation.spi;thread-context=true;version="2.1", \
    com.sun.activation.registries;thread-context=true

Import-Package: \
  *

instrument.disabled: true

app-resources= \
  META-INF/services/jakarta.activation.spi.MailcapRegistryProvider | \
  META-INF/services/jakarta.activation.spi.MimeTypeRegistryProvider

Include-Resource: \
  @${repo;jakarta.activation:jakarta.activation-api;${jakarta-activation-version};EXACT}!/META-INF/mailcap.default, \
  @${repo;jakarta.activation:jakarta.activation-api;${jakarta-activation-version};EXACT}!/META-INF/mimetypes.default, \
  @${repo;jakarta.activation:jakarta.activation-api;${jakarta-activation-version};EXACT}!/!(META-INF/maven/*|module-info.class), \
  @${repo;org.eclipse.angus:angus-activation;${angus-activation-version};EXACT}!/!(META-INF/maven/*|module-info.class)

Service-Component: \
  io.openliberty.jakarta.activation_2_1_${replace;${bVersion};\\.;_}.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=ignore; \
    properties:= "resources=${app-resources}"
    
publish.wlp.jar.suffix: dev/api/spec

-buildpath: \
    jakarta.activation:jakarta.activation-api;version=${jakarta-activation-version};strategy=exact, \
    org.eclipse.angus:angus-activation;version=${angus-activation-version};strategy=exact, \
	io.openliberty.org.glassfish.hk2.osgi-resource-locator;version=latest
