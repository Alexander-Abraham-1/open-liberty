                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_issClaimInIdToken" />
            <client 
                name="oidcclient_thirdparty_issClaimInAccessToken"
                secret="password"
                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_issClaimInAccessToken" />
            <client 
                name="oidcclient_thirdparty_subClaimInIdToken"
                secret="password"
                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_subClaimInIdToken" />
            <client 
                name="oidcclient_thirdparty_subClaimInAccessToken"
