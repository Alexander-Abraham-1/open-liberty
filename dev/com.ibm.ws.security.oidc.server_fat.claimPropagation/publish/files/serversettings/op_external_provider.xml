                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_propagate2TestClaimsIdTokenClaims_3rdPartyPropagates" />
            <client 
                name="oidcclient_thirdparty_propagateGroupIdsAccessTokenClaims"
                secret="password"
                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_propagateGroupIdsAccessTokenClaims_3rdPartyPropagates" />
            <client 
                name="oidcclient_thirdparty_propagate1TestClaimAccessTokenClaims"
                secret="password"
