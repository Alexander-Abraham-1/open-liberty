            <client 
                name="oidcclient_thirdparty_noExtraClaims"
                secret="password"
                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_noExtraClaims_3rdPartyPropagates" />
            <client 
