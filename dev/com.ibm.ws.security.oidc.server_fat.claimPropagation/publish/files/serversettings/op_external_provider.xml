                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_propagate1TestClaimAccessTokenClaims_3rdPartyPropagates" />
            <client 
                name="oidcclient_thirdparty_propagate2TestClaimsAccessTokenClaims"
                secret="password"
                scope="openid"
                preAuthorizedScope="openid"
                redirect="https://localhost:${bvt.prop.security_1_HTTP_default.secure}/oidcclient/redirect/RP_propagate2TestClaimsAccessTokenClaims_3rdPartyPropagates" />
            <client 
                name="oidcclient_thirdparty_issClaimInIdToken"
